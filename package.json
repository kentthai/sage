{
  "name": "sage",
  "version": "0.1.0",
  "private": true,
  "description": "AI-powered lifelong learning agent and knowledge journal",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:web\"",
    "dev:api": "npm run dev -w @sage/api",
    "dev:web": "npm run dev -w @sage/web",
    "build": "npm run build -w @sage/shared && npm run build -w @sage/api && npm run build -w @sage/web",
    "test": "npm run test --workspaces --if-present",
    "test:unit": "npm run test:unit --workspaces --if-present",
    "test:integration": "npm run test:integration --workspaces --if-present",
    "test:e2e": "npm run test -w e2e --if-present",
    "lint": "eslint packages/*/src --ext .ts,.tsx",
    "typecheck": "npm run typecheck --workspaces --if-present"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.55.0",
    "typescript": "^5.3.2"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
